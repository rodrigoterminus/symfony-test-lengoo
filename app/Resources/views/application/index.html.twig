{% extends "layout/base.html.twig" %}

{% block title %}AppBundle:Application:index{% endblock %}

{% block body %}
    <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        {{ form_start(form) }}
            <div class="mdl-card__supporting-text">
                <h4>Welcome!</h4>
                We are very happy to have you here. Please fill up the form bellow and attach your file. It will be a pleasure for us to receive your application.
            </div>
            <div class="mdl-card__supporting-text">
                {% if errors %}
                    {% for error in errors %}
                        {% include 'layout/error-chip.html.twig' with { message: error.message } %}
                    {% endfor %}
                {% endif %}

                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.name, { attr: { class: 'mdl-textfield__input' } }) }}
                            {{ form_label(form.name, null, { label_attr: {'class': 'mdl-textfield__label'} }) }}
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.email, { attr: { class: 'mdl-textfield__input' } }) }}
                            {{ form_label(form.email, null, { label_attr: {'class': 'mdl-textfield__label'} }) }}
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col">
                        <div class="mdl-textfield mdl-js-textfield">
                            {{ form_widget(form.file, { attr: { class: 'mdl-textfield__input' } }) }}
                            {{ form_label(form.file, null, { label_attr: {'class': 'mdl-textfield__label'} }) }}
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_widget(form.notes, { attr: { class: 'mdl-textfield__input', rows: 4 } }) }}
                            {{ form_label(form.notes, null, { label_attr: {'class': 'mdl-textfield__label'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="mdl-card__actions">
                {{ form_widget(form.submit, { attr: { class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' } }) }}
            </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/application.js') }}"></script>
    <script>
        application.ip = '{{ (app.environment == 'dev') ? '2400:cb00:2048:1::6819:1b10' : app.request.getClientIp() }}';
        application.init();
    </script>
{% endblock %}
